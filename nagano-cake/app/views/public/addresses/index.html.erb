<h1>配送先登録/一覧</h1>

<div style = "margin-bottom: 20px;">
  <%= form_with model: @address do |f| %>
  
    <div>
      <%= f.label :postcode, "郵便番号（ハイフンなし）" %><br />
      <%= f.text_field :postcode %>
    </div>
    
    <div>
      <%= f.label :address, "住所" %><br />
      <%= f.text_field :address %>
    </div>
    
    <div>
      <%= f.label :name, "宛名" %><br />
      <%= f.text_field :name %>
    </div>
    
    <div>
      <%= f.submit "新規登録"%>
    </div>

  <% end %>
</div>

<table border = "1">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postcode %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address.id) %> <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "この配送先を消しますか？" %></td>
      </tr>
    <% end %>
  </tbody>
</table>