<h1>商品新規登録</h1>
<%= form_with model: @item, url: '/admin/items' do |f| %>
  <div>
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :explanation, "商品説明" %>
    <%= f.text_field :explanation %>
  </div>
  <div>
    <%= f.label :genre_id, "ジャンル"%>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>
  </div>
  <div>
    <%= f.label :price, "税抜価格" %>
    <%= f.number_field :price %>
  </div>
  <div>
    <label><%= f.radio_button :is_sold, true %>販売中</label>
    <label><%= f.radio_button :is_sold, false %>販売停止中</label>
  </div>
  <div>
    <%= f.submit "新規登録" %>
  </div>
<% end %>