<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <h4 class="d-inline-block bg-light px-3 py-2 mb-5">ジャンル一覧・追加</h4>

    <% if alert.present? %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    <% end %>

    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <div class="form-group row">
        <div class="col-12 col-md-2">
          <%= f.label :name, "ジャンル名", class: "col-form-label font-weight-bold" %>
        </div>
        <div class="col-12 col-md-3">
          <%= f.text_field :name, class: "form-control", placeholder: "ジャンル名" %>
        </div>
        <div class="col-12 mt-3 offset-md-1 col-md-3 mt-md-0">
          <%= f.submit "新規登録", class: "btn btn-success w-100" %>
        </div>
      </div>
    <% end %>

    <div class="row mt-5">
      <div class="col-12 col-md-5">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th>ジャンル名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>