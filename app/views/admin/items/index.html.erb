<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <div class="row mx-0 mb-5">
      <h4 class="d-inline-block bg-light px-3 py-1 mb-0 align-middle">商品一覧</h4>
      <div class="d-inline-block ml-auto">
        <%= link_to new_admin_item_path, class: "btn btn-light shadow rounded-pill text-secondary" do %>
          <i class="fa-solid fa-plus"></i>
        <% end %>
      </div>
    </div>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item), class: "text-dark" do %>
                <%= item.name %> 
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active %>
              <td class="text-success font-weight-bold">販売中</td>
            <% else %>
              <td class="text-secondary font-weight-bold">売り切れ</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>