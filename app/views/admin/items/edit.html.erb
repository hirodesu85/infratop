<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <h4 class="d-inline-block bg-light px-3 py-2 mb-5">商品編集</h4>

    <%= render "layouts/error_messages", resource: @item %>

    <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
      <div class="form-group row">
        <div class="col-12 col-md-3">
          <%= f.label :image, "商品画像", class: "col-form-label" %>
        </div>
        <div class="col-12 col-md-6">
          <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-12 col-md-3">
          <%= f.label :name, "商品名", class: "col-form-label" %>
        </div>
        <div class="col-12 col-md-6">
          <%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-12 col-md-3">
          <%= f.label :introduction, "商品説明", class: "col-form-label" %>
        </div>
        <div class="col-12 col-md-6">
          <%= f.text_area :introduction, rows: 10, class: "form-control", placeholder: "ここに説明文を記述します" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-12 col-md-3">
          <%= f.label :genre_id, "ジャンル", class: "col-form-label" %>
        </div>
        <div class="col-12 col-md-6">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "選択して下さい"}, {class: "custom-select"} %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-12 col-md-3">
          <%= f.label :price, "税抜き価格", class: "col-form-label" %>
        </div>
        <div class="col-12 col-md-6">
          <%= f.number_field :price, min: 0, class: "form-control", placeholder: "300" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-12 col-md-3 col-form-label">
          販売ステータス
        </div>
        <div class="col-12 col-md-6 py-2">
          <div class="form-check form-check-inline">
            <%= f.radio_button :is_active, true, checked: true, class: "form-check-input" %>
            <%= f.label :is_active_true, "販売中", class: "form-check-label" %>
          </div>
          <div class="form-check form-check-inline ml-5">
            <%= f.radio_button :is_active, false, class: "form-check-input" %>
            <%= f.label :is_active_false, "販売停止中", class: "form-check-label" %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-12 col-md-3 offset-md-4 mt-4">
          <%= f.submit "変更を保存", class: "btn btn-lg btn-success w-100" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
