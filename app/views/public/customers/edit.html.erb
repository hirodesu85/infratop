<h1>会員情報編集</h1>

<%= form_with model: @customer, url: '/mypage' do |f| %>
  <%= render "public/shared/error_messages", resource: @customer %>

  <div class="field">
    <%= f.label :first_name, "姓" %><br />
    <%= f.text_field :first_name, auto_focus: true %>
  </div>
  
  <div class="field">
    <%= f.label :last_name, "名" %><br />
    <%= f.text_field :last_name %>
  </div>
  
  <div class="field">
    <%= f.label :first_name_kana, "セイ" %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "メイ" %><br />
    <%= f.text_field :last_name_kana %>
  </div>
  
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :postcode, "郵便番号（ハイフンなし）" %><br />
    <%= f.text_field :postcode %>
  </div>
  
  <div class="field">
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :phone_number, "電話番号（ハイフンなし）" %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>

<%= link_to "退会する", mypage_confirm_path %>