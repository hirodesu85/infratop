<div class="container">
  <div class="row justify-content-center my-5">
    <div class="col-md-5 shadow text-center px-0 rounded">
      <h5 class="bg-light py-4 mb-4">新規登録</h5>
      <p>
        名前・メール・パスワードを<br>
        入力してください。
      </p>

      <%= form_with model: @user, class: "px-4 mb-4", url: user_registration_path do |f| %>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fa-solid fa-user"></i></div>
            </div>
            <%= f.text_field :name, autofocus: true, placeholder: "名前", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fa-solid fa-envelope"></i></div>
            </div>
            <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fa-solid fa-lock"></i></div>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（6文字以上）", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fa-solid fa-circle-check"></i></div>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "form-control" %>
          </div>
        </div>

        <div class="actions mt-5">
          <%= f.submit "サインアップ", class: "btn btn-info btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
