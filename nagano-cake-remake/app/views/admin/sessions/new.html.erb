<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <h4 class="d-inline-block bg-light px-3 py-2 mb-3">管理者ログイン</h4>

    <% if alert.present? %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    <% end %>

    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <div class="form-group row">
        <div class="col-12 col-md-3 offset-md-1">
          <%= f.label :email, "メールアドレス", class: "col-form-label" %>
        </div>
        <div class="col-12 col-md-8">
          <%= f.email_field :email, class: "form-control", placeholder: "sample@example.com" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-12 col-md-3 offset-md-1">
          <%= f.label :password, "パスワード", class: "col-form-label" %>
        </div>
        <div class="col-12 col-md-8">
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-12 col-md-4 offset-md-4 mt-3">
          <%= f.submit "ログイン", class: "btn btn-primary w-100" %>
        </div>
      </div>
      <% end %>
  </div>
</div>
