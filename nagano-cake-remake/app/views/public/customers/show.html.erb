<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <h4 class="d-inline-block bg-light px-3 py-2 mb-5">マイページ</h4>

    <div class="row">
      <div class="col-6 col-md-2">
        <h5 class="font-weight-bold mt-2">登録情報</h5>
      </div>
      <div class="col-6 col-md-2">
        <%= link_to "編集する", edit_customer_path, class: "btn btn-success w-100" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-12 col-md-10">
        <table class="table table-bordered mt-3">
          <tbody>
            <tr>
              <th class="table-active col-3">氏名</th>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <th class="table-active">カナ</th>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th class="table-active">郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th class="table-active">住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th class="table-active">電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th class="table-active">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-6 col-md-2">
        <h5 class="font-weight-bold mt-2">配送先</h5>
      </div>
      <div class="col-6 col-md-3">
        <%= link_to "一覧を見る", root_path, class: "btn btn-primary w-100" %>
      </div>
    </div>

    <div class="row">
      <div class="col-6 col-md-2">
        <h5 class="font-weight-bold mt-2">注文履歴</h5>
      </div>
      <div class="col-6 col-md-3">
        <%= link_to "一覧を見る", root_path, class: "btn btn-primary w-100" %>
      </div>
    </div>

  </div>
</div>